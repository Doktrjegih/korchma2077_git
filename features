else:
    print(first_roll)

# лист отложенных костей - название для Виталика?)))
d2 = list()
print('введите номера костей, которые нужно отложить:')
d1 = list(input())
for i in d1:
    if int(i) < 1:
        break
    else:
        d2.append(d[int(i)-1])
print('лист отложенных костей:', d2)



